// INFRASTRUCTURE START ------------------------------------------------ //
//
// PhoR
PhoR_SYNTHESIS,[],PhoR,0,inf;
PhoR_MEMBRANE,PhoR,PhoR_MEMBRANE,-inf,inf;
PhoR_DEGRADATION,PhoR,[],0,inf;
PhoR_MEMBRANE_FORCE_RECYCLE,PhoR_MEMBRANE_USED,[],0,inf;

// PhoB
PhoB_SYNTHESIS,[],PhoB,0,inf;
PhoB_DEGRADATION,PhoB,[],0,inf;

// RNAP and Ribosome
RIBOSOME_ASSEMBLY,[],RIBOSOME,-inf,inf;
RIBOSOME_FORCE_RECYCLE,RIBOSOME_USED,[],0,inf;
RNAP_ASSEMBLY,[],RNAP,-inf,inf;
RNAP_FORCE_RECYCLE,RNAP_USED,[],0,inf;

// ATP/ADP
ATP_SYNTHESIS,[],ATP,-inf,inf;
ADP_SYNTHESIS,[],ADP,-inf,inf;
//
// INFRASTRUCTURE STOP ------------------------------------------------- //


// SENSOR START -------------------------------------------------------- //
//
// Activate PhoB -
BIND_PhoR_ATP,PhoR_MEMBRANE+ATP,PhoR_MEMBRANE_ATP,0,inf;
ACTIVATE_PhoB_TRANSFER,PhoR_MEMBRANE_ATP+PhoB,PhoR_MEMBRANE+ADP+P_PhoB,0,inf;
ACTIVATE_PhoB_BIND,PhoR_MEMBRANE_ATP+PhoB,PhoR_MEMBRANE_ATP_PhoB,-inf,inf;
ACTIVATE_PhoB_TRANSFER,PhoR_MEMBRANE_ATP_PhoB,PhoR_MEMBRANE_USED+ADP+P_PhoB,0,inf;

// Deactivate PhoB -
BIND_PhoB_PPASE,P_PhoB+ADP,PhoB+PhoB_PPASE+ATP,0,inf;
//
// SENSOR STOP --------------------------------------------------------- //

// TRANSCRIPTION START ------------------------------------------------- //
//
// PhoA
PHOA_BACKGROUND_RNAP,G_PHOA+RNAP,G_PHOA_RNAP,-inf,inf;
PHOA_START,G_PHOA_RNAP,G_PHOA+RNAP_USED+mRNA_PHOA,0,inf;
PHOA_TF,G_PHOA+P_PhoB,G_PHOA_P_PhoB,-inf,inf;
PHOA_TF_RNAP,G_PHOA_P_PhoB+RNAP,G_PHOA_P_PhoB_RNAP,-inf,inf;
PHOA_TF_START,G_PHOA_P_PhoB_RNAP,G_PHOA+P_PhoB+RNAP_USED+mRNA_PHOA,0,inf;
mRNA_DEGRADE_PHOA,mRNA_PHOA,[],0,inf;
//
// TRANSCRIPTION STOP -------------------------------------------------- //

// TRANSLATION START --------------------------------------------------- //
//
// PhoA
PHOA_TRANSLATION_BIND,mRNA_PHOA+RIBOSOME,mRNA_PHOA_RIBOSOME,-inf,inf;
PHOA_TRANSLATION_SCAN,mRNA_PHOA_RIBOSOME,mRNA_PHOA_RIBOSOME_ACTIVE,0,inf;
PHOA_TRANSLATION,mRNA_PHOA_RIBOSOME_ACTIVE,mRNA_PHOA+RIBOSOME_USED+PhoA,0,inf;
PHOA_DEGRADATION,PhoA,[],0,inf;
//
// TRANSLATION STOP ---------------------------------------------------- //